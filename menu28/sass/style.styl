@import "../node_modules/nib"

@import url('https://fonts.googleapis.com/css?family=Lato:300');
@import url('https://fonts.googleapis.com/css?family=PT+Sans+Narrow:300');
@import url('https://fonts.googleapis.com/css?family=Oswald:300');

$base = crimson;
html, body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
.wrapper {
  width: 100%;
  height: 100%;
}
nav {
  absolute: left 0 top 0 bottom 0;
  width: 200px;
  background: $base;
}
nav.submenu {
  perspective: 1000;
  transform-origin: left;
  absolute: left 199px top 0 bottom 0;
  z-index: 0;
  width: 0;
  > ul {
    absolute: top 0 left 0 right 0 bottom 0;
    transform-style: preserve-3d;
    transform-origin: top left;
    transform: rotateY(90deg);
    transition: transform 0.25s ease-out;
    border-left: 10px solid lighten($base, 70%);
    background: $base;
    width: 200px;
  }
}
ul {
  absolute: top 0 left 0 right 0 bottom 0;
  list-style: none;
  padding: 120px 0 0 0;
  margin: 0;
  li {
    a {
      font: lighter 12px 'PT Sans Narrow', Lato, sans-serif;
      text-transform: uppercase;
      letter-spacing: 0.3em;
      padding: 15px 20px;
      color: white;
      display: block;
      text-decoration: none;
      box-shadow: 0 1px lighten($base, 25%);
      white-space: nowrap;
    }
    &:hover {
      background: lighten($base, 70%);
      > a {
        color: darken($base, 25%);
      }
      > nav.submenu {
        left: 200px;
        z-index: 100;
        transition: transform 0.25s ease-in;
        > ul {
          transform: rotateY(0deg);
        }
      }
    }
    &.sub {
      > a {
        relative: 0;
        &:after {
          $size = 5px;
          content: '';
          absolute: right 10px top 50%;
          width: 0;
          height: 0;
          transform: translateY(-50%);
          border-width: $size 0 $size $size;
          border-color: transparent white;
          border-style: solid;
        }
      }
      &:hover {
        > a {
          &:after {
            border-color: transparent darken($base, 25%);
          }
        }
      }
    }
  }
}
.logo {
  $size = 80px;
  absolute: top 80px left 60px;
  margin: -60px 0 0 -60px;
  width: $size;
  height: $size;
  transform: scale(0.8);
  cursor: pointer;
  &:before, &:after {
    font: lighter 12px Lato, sans-serif;
    color: white;
    letter-spacing: 2px;
    text-transform: uppercase;
  }
  &:before {
    content: 'Robert';
    absolute: left 100% bottom 40%;
    transform-origin: bottom left;
    transform: scale(2.2);
  }
  &:after {
    content: 'Messerle.com';
    absolute: left 100% top 55%;
    transform-origin: top left;
    transform: scale(1.3);
  }
  svg {
    width: $size; height: $size;
  }
  path {
    fill: white;
  }
  &:hover {
    transform: scale(0.9);
  }
}
.content {
  margin-left: 200px;
  padding: 0 25px;
  h1 {
    font: 300 52px Oswald, sans-serif;
    margin: 0;
    padding: 20px 0 10px;
    line-height: 80px;
  }
  p {
    font: lighter 18px/22px 'PT Sans Narrow', 'Segoe UI', sans-serif;
  }
}