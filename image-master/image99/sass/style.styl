.trackpad
  height 60px
  width 124px
  border-radius 6px
  background #c2cdcf
  position absolute
  top 134px
  left 167px

.cup
  height 155px
  width 131px
  position absolute
  bottom 269px
  left 60px
  background cup
  border-radius-top 50% 34%
  border-radius-bottom 45% 67%

.cupshadow
  height 56px
  width 100px
  background rgba( red(#ac5b14), green(#ac5b14), blue(#ac5b14), 0.2 )
  border-radius-bottom 56px
  position absolute
  bottom 265px
  left 52px

.top
  height 97px
  width 131px
  background #8f6739
  border-radius 50%
  box-sizing border-box
  border 12px solid cupinner
  box-shadow inset 0 50px 0 -20px #6b4b28
  position absolute
  
.handle
  height 66px
  width 60px
  background transparent
  box-sizing border-box
  border 16px solid cup
  border-radius-top 50%
  border-bottom-left-radius 80% 60%
  position absolute
  top 60px
  left -31px
  
.teatag
  height 36px
  width 32px
  position absolute
  top 103px
  left -20px  
  background teatag
  box-shadow inset 0 -6px 0 0 teatagaccent
  &::before
    content ""
    width: 0px;
    height: 0px;
    position absolute
    top -8px
    border-style: solid;
    border-width: 0 16px 8px 16px;
    border-color: transparent transparent teatag transparent;

.teabagcord
  height 57px
  width 60px
  position absolute
  top 57px
  left -7px
  box-sizing border-box
  border 6px solid #fff5e6
  border-radius-top 29px
  clip rect(0px 44px 41px 0px)

.teabagcordbeginingandend
  position absolute
  top 57px
  left -7px
  &::before
  &::after
    content ""
    background #fff5e6
    border-radius 50%
    position absolute
  &::before
    top 3.1px
    left 40px
    height 7.1px
    width 6.6px
    clip rect(0px 6.6px 7px 3.8px)
  &::after
    top 38px
    left 0px
    height 6px
    width 6px

@keyframes blink 
  50%
    opacity 0