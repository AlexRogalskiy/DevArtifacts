color-bg = #F44336;
slider-color = white;

body
  display: flex
  width: 100vw
  height: 100vh
  background-color: color-bg
  align-items: center
  justify-content: center
  
.slider
  appearance:none
  width: 10rem
  height: .25rem
  outline: none
  border-radius: .25rem
  
  &::-webkit-slider-thumb
    appearance: none
    width: 1.5rem
    height: 1.5rem
    background-color: color-bg
    border: .25rem solid white
    border-radius: 1rem
    cursor: pointer