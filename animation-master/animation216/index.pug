mixin rolling-number(limit)
  - limit = limit || 10;
  .ring-wrap
    ul.ring: while (limit--)
      li.ring__num

.box
  .precision
    input#js-range(type="range", step="1", min="1", max="6", value="6", autofocus)
  .ring-box
    +rolling-number()

