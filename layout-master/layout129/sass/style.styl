@import "../node_modules/nib"

global-reset()

*
  box-sizing border-box

body, html
  height 100%

body
  background #F1F1F1
  width 80%
  max-width 1000px
  margin 20px auto
  font 17px Roboto, sans-serif

.module
  float left
  margin 0 0 20px 2% 
  width 31%
  position relative
  background white
  box-shadow 0 0 5px #aaa
  
  ::before
    content ""
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 5px
    background linear-gradient(to right, #62bb46 12.5%,#497d3b 12.5%,#497d3b 25%,#f4793b 25%,#f4793b 37.5%,#da1e4e 37.5%,#da1e4e 50%,#92278f 50%,#92278f 62.5%,#5e2e86 62.5%,#5e2e86 75%,#1c75bc 75%,#1c75bc 87.5%,#2f547d 87.5%)
  
  h2
    margin 0
    padding 20px 15px 15px 15px
    text-align center
    font-size 100%
    text-transform uppercase
    font-weight 400
    border-bottom 2px solid #ccc
    color #555
  
  ul
    margin 0
    width 100%
    
    li
      list-style none
      margin 0
      border-bottom 1px solid #ccc
      &:last-child
        border-bottom none
  
      a
        display block
        width 100%
        padding 10px
        text-indent 20px
        color black
        font-weight 700
        text-decoration none
        
        &:hover
          color rgba(0,0,0,0.6)

#main
  float left
  width 66%
  background white
  padding 20px
  box-shadow 0 0 2px #aaa
  
  h1
    font-size 200%
    font-weight bold
    margin 10px 0 25px 0
  
  p
    color #555
    margin-bottom 25px
    line-height 1.5