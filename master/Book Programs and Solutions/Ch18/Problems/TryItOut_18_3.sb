While("True")
  TextWindow.Write("Can you paint with all the colors of the wind? ")
  ans = TextWindow.Read()
  ans = Text.ConvertToLowerCase(ans)
  
  If((ans = "y") Or (ans = "yes") Or (ans = "n") Or (ans = "no")) Then
    TextWindow.WriteLine("Good answer. I only paint with primary colors.")
  Else
    TextWindow.WriteLine("I didn't get that. Please try again.")
  EndIf
  
  TextWindow.WriteLine("")
EndWhile