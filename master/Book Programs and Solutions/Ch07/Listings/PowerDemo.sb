' PowerDemo.sb
TextWindow.Write("Principal (in dollars)........: ")
P = TextWindow.ReadNumber()

TextWindow.Write("Interest rate (decimal form)..: ")
r = TextWindow.ReadNumber()

TextWindow.Write("Number of years...............: ")
n = TextWindow.ReadNumber()

A = P * Math.Power(1 + r, n)

TextWindow.WriteLine("")
TextWindow.Write("After " + n + " years, ")
TextWindow.WriteLine("you will have $" + A)
TextWindow.WriteLine("That fortune is almost as big as Batman's!")