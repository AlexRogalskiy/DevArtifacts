// LAYOUTS
@import '../assets/imports.styl'

/* eaadcb0830acd61cf8e52fd362bf0534 */
.browsers-support-l
	.icon
		rect 12px
		float left
		fill c-grey1
		&:hover
			fill c-grey2-hover
			// cursor help
		+ .icon
			margin-left 2.25*gs


.main-footer-l
	text-align center
	padding-top  		4*gs
	padding-bottom 	2*gs
	background rgba(0,0,0,.05)
	box-shadow inset 0 (gs/2) 0 rgba(rgb(c-grey1), .15)

/* 52dcba70eccc4bceddf48d0b927eee58 */
.pages-nav-l
	position relative
	text-align center
	.pages-nav-b
		position absolute
		top 0
		&.is-right
			right 0
	.pages-nav-nums-b
		display inline-block

/* c44109ec9a3f696b9265212c36e7fc6a */
.social-btns-l
	.social-btn-b
		float left
		+ .social-btn-b
			margin-left 2*gs

/* bef76143e419e0eeaedd7c605f324c64 */
.use-2-options-line-l
	> .left-ll, > .right-ll, > .center-ll
		width 40%
		float: left
	> .right-ll
		padding-left 4*gs

	@media all and (max-width: 1150px)
		> .right-ll, > .center-ll
			clear both
		> .left-ll, > .right-ll
			width 100%
		> .right-ll
			padding-left 0
		> .center-ll
			margin-top 2*gs
			margin-left: -2*gs

	> .center-ll
		width 20%

	.use-or-b
		rect 20*gs
		margin 0 auto
		position: relative
		t - 2*gs

/* 40786efe0e3396f01135b7557644635b */
.use-line-l
	> .left-ll, > .right-ll
		float left
	> .left-ll
		width 20%
		&.is-no-num
			max-width 15*gs

	> .right-ll
		width 80%
		padding-left 8*gs
		text-align left
		display table
		vertical-align middle
		height 15*gs
		.use-text-b
			display table-cell
			vertical-align middle

	@media all and (max-width: 1150px)
		> .left-ll
			width 30%
		> .right-ll
			width 70%
			padding-left 4*gs


/* f0da073515e3bf86be77b0b224b3e280 */
.numed-use-preview-l
	position: relative
	padding-right 15*gs
	height 15*gs

	&.is-no-num
		padding-right 0
		> .connector-le, .use-num-b
			display none
		.use-preview-b
			right 100%
			margin-right - 15*gs
			&:hover
				margin-right: - 5*gs
				@media all and (max-width: 1150px)
					margin-right 0


	&.is-no-preview
		.use-preview-b
			display none
	
	> .connector-le
		border-top (gs/2) solid c-grey3
		width 100%
		position: absolute 
		top 50%
		left 0
		z-index: 0
	
	.use-num-b
		position absolute
		z-index: 1
		margin-top - 2.75*gs
		t 50%
		l 0
	duration = .25s
	easing = linear
	.use-preview-b
		position: absolute
		z-index: 1
		margin-left 7.5*gs
		right 0
		top 0
		transition(all, .25s, ease-out)
		&:hover
			top 	- 12.5*gs
			right: 	- 12.5*gs
			rect 40*gs
			background-size 75%
			z-index: 11

		
	

/* f609e06a5e7b6776445a78e6c90fe6fa */
.noties-l
	.noty-l
		padding-bottom (gs/2)
		position relative
		overflow hidden
		display none
		&.is-show
			+ .noty-l
				margin-top (gs/2)
			.noty-b
				left 0
		.noty-b
			position relative
			left  - notyWidth - (gs/2)
			transition left .25s ease-out

/* 58b21870f4e247e374c47f1d6d823c88 */
.icon-set-l
	.btn-b
		width 100%
	> .left-ll
		width 4.5*gs
		float left
	> .right-ll
		margin-left 5.5*gs


/* 7e807202bea13c1b52e121142a6092f8 */
.submit-collection-l
	background rgba(0,0,0,.025)
	border-top-left-radius br
	border-bottom-left-radius br

	.collection-credits-b
		float left

	.submit-icon-collection-b
		margin-left 36*gs
		background white


#main-l
	max-width 146*gs
	margin 0 auto
	padding-bottom 12*gs
	min-width 78*gs
