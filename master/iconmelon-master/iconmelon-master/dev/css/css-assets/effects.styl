// EFFECTS
@import '../assets/imports.styl'


.top-bottom-stripes-eff
	position relative
	&.is-hoverable, &.is-check
		&:after, &:before
			content ''
			position absolute
			display none
			color inherit
			width 100%
			height 2px
			left -1px
			border-top 1px solid
			border-bottom 1px solid
		&:after
			bottom - (gs/2)
		&:before
			top - (gs - 2px)
		&:hover, &.is-check
			// 4!
			&:after, &:before
				display block

.box-shadow-down-eff
	downShadow()

.loading-eff
	background-image: -webkit-linear-gradient(-45deg, rgba(255,255,255,.2) 25%, rgba(255, 154, 26, 0) 25%, rgba(255, 154, 26, 0) 50%, rgba(255,255,255,.2) 50%, rgba(255,255,255,.2) 75%, rgba(255, 154, 26, 0) 75%);
