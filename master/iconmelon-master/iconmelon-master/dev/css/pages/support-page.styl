@import '../assets/imports'

.support-p
	padding 12*gs 4*gs
	opacity: 0

	> .header-pe
		font-size 3*gs
		line-height 3*gs
		color lighten(c-grey2,5)
		margin-bottom 3*gs
		margin-top - (gs/2)
		padding-left 4*gs
		text-align center

	.support-blocks-pl
		border-radius br + 2px
		box-shadow none

		.support-block-b
			border gs solid rgba(0,0,0,.05)
			width 62*gs
			margin: 0 auto
			height auto
			padding 4*gs 4*gs 12*gs
			border-radius br + 2px
			float: left
			min-height 68*gs
			margin-left 4*gs
			margin-top  4*gs

			@media screen and (max-width: 1120px)
				float: none
				margin 0 auto
				margin-top 4*gs


			// + .support-block-b
			// 	margin-top 2*gs

		form
			opacity 0
			position: absolute
			nw 0
			rect 100%

		input
			rect 100%

			


