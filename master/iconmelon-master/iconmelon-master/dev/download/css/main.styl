@css{
/* Pretty printing styles. Used with prettify.js. */
/* Vim sunburst theme by David Leibovic */
		
		#text{
			padding: 16px 0 0;
			border-radius: 3px;
			line-height: 16px;
		}

     #text .str, code .str {
        color: #e6db74;
     }
     /* string  - green */
     #text .kwd, code .kwd {
          color: #66d9ef;
     }
     /* keyword - dark pink */
     #text .com, code .com {
          color: #aeaeae;
     }
     
     #text .typ,
     code .typ {
          color: #89bdff;
     }
     /* type - light blue */
     #text .lit, code .lit {
          color: #ae81ff;
     }
     /* literal - blue */
     pre#text .pun,
     code .pun {
          color: #fff;
     }
     /* punctuation - white */
     pre#text .pln,
     code .pln {
          color: #fff;
     }
     /* plaintext - white */
     pre#text .tag, code .tag {
          color: #f92772;
     }
     #text .atn, code .atn {
          color: #a6e22d;
     }
     #text .atv, code .atv{
          color: #e6db74;
     }
     #text .dec, code .dec{
          color: #3387cc;
     }
     /* decimal - blue */
     #text.prettyprint, code.prettyprint {
          background-color: #272822;
          text-align: left;
          /*width: 60% !important;*/
          white-space: pre#text-wrap;
          /* css-3 */
          white-space: -moz-pre#text-wrap;
          /* Mozilla, since 1999 */
          white-space: -pre#text-wrap;
          /* Opera 4-6 */
          white-space: -o-pre#text-wrap;
          /* Opera 7 */
          word-wrap: break-word;
          /* Internet Explorer 5.5+ */
          font-size: 1em;
     }
     /* Specify class=linenums on a pre#text to get line numbering */
     ol.linenums {
          /*margin-top: 0;*/
          /*margin-bottom: 0;*/
          color: #aeaeae;
     }

     @media print {
     pre#text .str, code .str { color: #060; }
     pre#text .kwd, code .kwd { color: #006; font-weight: bold; }
     pre#text .com, code .com { color: #600; font-style: italic; }
     pre#text .typ, code .typ { color: #404; font-weight: bold; }
     pre#text .lit, code .lit { color: #044; }
     pre#text .pun, code .pun { color: #440; }
     pre#text .pln, code .pln { color: #000; }
     pre#text .tag, code .tag { color: #006; font-weight: bold; }
     pre#text .atn, code .atn { color: #404; }
     pre#text .atv, code .atv { color: #060; }
     }
}
