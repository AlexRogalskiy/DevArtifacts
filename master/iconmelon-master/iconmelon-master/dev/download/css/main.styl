	padding-left 2*gs

	#text
		+ #text		
			margin-top 2*gs

	.text-e
		margin gs 0 gs 2*gs


.logo-tiny-e
	rect 4*gs
	background url('main-logo.svg') no-repeat center center
	display block
	padding-top 1px
	.icon
		rect 4*gs
		margin 0 auto

.main-header-b
	font-size 20px
	color c-grey1
	height 7*gs
	padding-top 2*gs + 2px
	padding-left 3*gs
	background-color rgba(255,255,255,.9)
	position fixed
	nw 0
	width 100%
	z-index: 10

	> .loading-be
		width 	 0%
		height 	 gs
		background-color c-green
		left 	 0
		bottom 	 - gs + 2px
		position absolute
		transition width .05s ease-out
		border-top-right-radius br + 1px
		border-bottom-right-radius br + 1px

	&.is-convex
		downShadow()

	> .logo-tiny-e
		margin-top - gs
		display: block
		float left
		position static

	> a
		display inline-block
		font-size 14px
		position relative
		t - (gs/2)


		+ .menu-item-be
			margin-left 3*gs



a
	color c-grey1
	text-decoration none
	position relative
 
	&.is-hoverable, &.is-check
		&:after
			content ''
			position absolute
			display none
			color inherit

			width 100%
			height 2px
			left -2px

			bottom - gs + 2px
			border 1px solid
			border-left-color transparent
			border-right-color transparent

		&:hover
			// 4!
			&:after
				display block

	&.is-grey3
		color c-grey3
		&:after
			border-top-color    c-grey3
			border-bottom-color c-grey3		
		

	&.is-grey2--onhover
		&:hover
			color c-grey2

			&:after
				border-top-color    c-grey2
				border-bottom-color c-grey2		

	&.is-check
		&:after
			display block



*
	bbox()

body, html
	min-rect 100%
	margin 0
	padding 0
	overflow-x hidden
	color c-grey1
	font-family monospace

