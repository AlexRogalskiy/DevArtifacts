' Tells you how many minutes in any number of days

TextWindow.Write("How many days? ")
days = TextWindow.ReadNumber()  ' Reads the number of days

mins = days * 24 * 60           ' Does the calculation

TextWindow.Write("There are " + mins + " minutes in ")
TextWindow.WriteLine(days + " days.")