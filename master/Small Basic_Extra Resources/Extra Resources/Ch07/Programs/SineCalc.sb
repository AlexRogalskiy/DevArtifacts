' Calculates the sine of an angle given in degrees

TextWindow.Write("Enter angle (in degrees): ")
deg = TextWindow.ReadNumber()   ' Angle in degrees
rad = Math.GetRadians(deg)      ' Angle in radians
ans = Math.Sin(rad)             ' Computes the sine
TextWindow.WriteLine("sine(" + deg + ") = " + ans)