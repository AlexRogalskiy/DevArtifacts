' Encrypts a string by substituting every letter with the letter that comes after it

TextWindow.Write("Enter a message to encrypt: ")
msg = TextWindow.Read()
For N = 1 To Text.GetLength(msg)
  ch = Text.GetSubText(msg, N, 1)
  code = Text.GetCharacterCode(ch)
  code = code + 1
  ch = Text.GetCharacter(code)
  TextWindow.Write(ch)
EndFor
TextWindow.WriteLine("")