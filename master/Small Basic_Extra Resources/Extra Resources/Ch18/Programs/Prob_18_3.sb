' Echoes back a string without the spaces

While ("True")  
  TextWindow.Write("Enter a sentence: ")
  ans = TextWindow.Read()
  
  For N = 1 To Text.GetLength(ans)
    ch = Text.GetSubText(ans, N, 1)
    If (ch <> " ") Then
      TextWindow.Write(ch)
    EndIf
  EndFor
  
  TextWindow.WriteLine("")  
  TextWindow.WriteLine("") 
EndWhile