TextWindow.Write("Please enter a number between 0 and 1000: ")
num = TextWindow.ReadNumber()

If (num >= 500) Then
  TextWindow.WriteLine("This will take some time. Please wait...")
  Program.Delay(2000)  ' Waits two seconds to simulate a long operation
EndIf
TextWindow.WriteLine("Continuing...")