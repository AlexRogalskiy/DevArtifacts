' Calculates ticket prices

TextWindow.Write("Is it before 4:00 PM [y/n]? ")
before4PM = TextWindow.Read()

TextWindow.Write("How old are you? ")
age = TextWindow.Read()

If (age >= 14) Then
  charge = 12
Else
  charge = 8
EndIf

If (before4PM = "y") Then
  charge = charge / 2
EndIf

TextWindow.WriteLine("Please pay $" + charge + ".")