' Converts feet to meters

TextWindow.Title = "Feet to Meters"

TextWindow.Write("Enter a length (in feet): ")
feet = TextWindow.Read()

FeetToMeter()

TextWindow.WriteLine("That is " + meters + " meters.")
TextWindow.WriteLine("")

' 1 foot is 0.3048 meters
Sub FeetToMeter
  meters = feet * 0.3048
  meters = Math.Round(meters * 100) / 100
EndSub