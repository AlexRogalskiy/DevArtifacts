' Finds the sum of each row of the matrix

' Creates a 4x4 matrix
For I = 1 To 4
  For J = 1 To 4
    mat[I][J] = I
  EndFor
EndFor

For I = 1 To 4
  sum = 0
  For J = 1 To 4
    sum = sum + mat[I][J]
  EndFor
  TextWindow.WriteLine("Sum of row " + I + " = " + sum)
EndFor
TextWindow.WriteLine("")