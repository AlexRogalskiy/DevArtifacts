' Displays the contents of a matrix

For I = 1 To 4
  For J = 1 To 4
    If (I > J) Then
      mat[I][J] = 0
    Else
      mat[I][J] = 1
    EndIf
  EndFor
EndFor

' Displays the matrix
For I = 1 To 4
  For J = 1 To 4
    TextWindow.CursorLeft = (J - 1) * 3
    TextWindow.Write(mat[I][J])
  EndFor
  TextWindow.WriteLine("")
EndFor
TextWindow.WriteLine("")