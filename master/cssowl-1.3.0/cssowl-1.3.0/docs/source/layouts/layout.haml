!!!5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %title Cssowl Documentation

    = stylesheet_link_tag "bootstrap", "docs"

  %body{:class => page_classes}

    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} Cssowl
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to 'SASS', '/sass.html'
            %li
              = link_to 'SCSS', '/scss.html'
            %li
              = link_to 'LESS', '/less.html'
            %li
              = link_to 'Stylus', '/stylus.html'

    .container.bs-docs-container

      .row

        .col-md-12

          = yield

    = javascript_include_tag  "bootstrap"
