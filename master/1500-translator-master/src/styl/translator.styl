.translator
  &__main
    +above('sm')
      align-items stretch
      lost-flex-container row 

  &__content
    +above('sm')
      lost-column 6/12 0 0 

  &__label
    position absolute
    top -999em

  &__text 
    border 0
    box-shadow 0 1px 3px 1px rgba($gray, .2)
    display block
    font-size 2.4rem
    min-height 30vw
    padding $space
    resize none
    width 100%

    +above('sm') 
      min-height 'calc(50vh - %s)' % ($footer-height + $avatar-height)
      overflow-y auto

    &[disabled]
      background $gray-white 

    &:not(:last-child)
      border-right $gray-lighter solid 1px
 