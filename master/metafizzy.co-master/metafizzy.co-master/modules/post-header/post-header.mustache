<a class="post-header" href="/blog/{{slug}}">

  {{#if thumbnail}}
    <div class="post-header__thumbnail" style="background-image: url(
      {{#if image}}{{image}}{{else}}/img/metafizzy-logo-thumbnail-magenta.png{{/if}})"></div>
  {{/if}}
  {{#if lazyThumbnail}}
    <div class="post-header__thumbnail"
      data-lazy="{{#if image}}{{image}}{{else}}/img/metafizzy-logo-thumbnail-magenta.png{{/if}}"></div>
  {{/if}}

  <div class="post-header__text">
    <h1 class="post-header__title">{{{title}}}</h1>
    <p class="post-header__details">
      <span class="post-header__date">{{timestamp}}</span>
      <span class="post-header__author">
        &middot; by {{#if authorName}}{{authorName}}{{else}}David DeSandro{{/if}}
      </span>
    </p>
  </div>
</a>
