<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 ">
  <id>@archive@</id>
  <formats>
    <format>tar</format>
  </formats>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <includes>
        <include>*.sh</include>
        <include>*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/etc</directory>
      <outputDirectory>etc</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>true</filtered>
      <includes>
        <include>@env@.properties</include>
        <include>common.properties</include>
        <include>jmxremote.password</include>
        <include>log4j.xml</include>
        <include>spring.xml</include>
        <include>spring-*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/etc</directory>
      <outputDirectory>etc</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>false</filtered>
      <includes>
        <include>@env@.yieldbroker.com.pfx</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/error</directory>
      <outputDirectory>error</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>false</filtered>
      <includes>
        <include>**/*.html</include>
      </includes>
    </fileSet>    
    <fileSet>
      <directory>${project.basedir}/template</directory>
      <outputDirectory>template</outputDirectory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
      <filtered>false</filtered>
      <includes>
        <include>**/*.png</include> 
        <include>**/*.gif</include>
        <include>**/*.jpg</include>
        <include>**/*.vm</include> 
        <include>**/*.html</include>
        <include>**/*.css</include>
        <include>**/*.js</include>               
      </includes>
    </fileSet>      
  </fileSets>
</assembly>
