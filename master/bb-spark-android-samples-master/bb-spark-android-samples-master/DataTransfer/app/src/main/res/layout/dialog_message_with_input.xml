<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dialog_margin_vertical"
    android:paddingLeft="@dimen/dialog_margin_horizontal"
    android:paddingRight="@dimen/dialog_margin_horizontal"
    android:paddingTop="@dimen/dialog_margin_vertical">

    <!-- First info line -->
    <TextView
        android:id="@+id/dialog_info_first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_spacing"
        android:ellipsize="end"
        android:textIsSelectable="false"
        android:textSize="16sp" />

    <!-- Input field -->
    <AutoCompleteTextView
        android:id="@+id/dialog_input_regId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_spacing"
        android:hint="@string/enter_a_regid"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"/>

    <!-- Input field -->
    <EditText
        android:id="@+id/dialog_input_metadata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_spacing"
        android:hint="@string/meta_data_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"/>

</LinearLayout>
