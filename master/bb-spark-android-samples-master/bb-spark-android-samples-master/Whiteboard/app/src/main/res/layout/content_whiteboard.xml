<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bbm.example.whiteboard.WhiteboardActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="1">

        <com.bbm.example.whiteboard.WhiteboardView
            android:id="@+id/doodleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/stroke_color"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/stroke_color" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/stroke_thickness"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/stroke_medium" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/add_picture"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_picture" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/clear_background"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_delete" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/send_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_send" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
