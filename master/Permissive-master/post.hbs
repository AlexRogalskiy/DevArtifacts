{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- Post Content --}}
{{#post}}
  <main
    class="content"
    id="content"
    role="main"
    {{#if @blog.cover}}
      style="background: url({{@blog.cover}}) right bottom no-repeat fixed; background-size: cover;"
    {{/if}}
  >
    <div class="post">
      <article class="article" id="{{id}}-{{slug}}">
        <header class="article__header">
          <time class="article__date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM, DD YYYY"}}</time>
          <h1 class="article__title">{{title}}</h1>
          {{!-- TODO, add sub-title support --}}
          <h2 class="article__sub-title"></h2>
        </header>

        {{#if image}}
          <section class="article__thumbnail">
            <img alt="{{title}}" src="{{image}}" />
          </section>
        {{/if}}

        <section class="article__content">
          {{content}}
        </section>

        <footer class="article__footer">
          {{> author}}
          {{> social-share}}
          {{> subscribe}}
        </footer>
      </article>

      {{> site-footer}}
    </div>
  </main>
{{/post}}

{{!-- Powered By --}}
{{> powered-by}}
