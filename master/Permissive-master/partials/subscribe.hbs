{{#if @labs.subscribers}}
  <div class="subscribe">
    <header class="subscribe__header">
      <h3 class="subscribe__title">Subscribe to {{@blog.title}}</h3>
      <p class="subscribe__sub-title">Get the latest posts delivered right to your inbox.</p>
    </header>

    <section class="subscribe__content">
      {{subscribe_form placeholder="Your email address"}}
    </section>

    <footer class="subscribe__footer">
      or subscribe <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/"><b>via RSS</b></a> with Feedly!
    </footer>
  </div>
{{/if}}