<!DOCTYPE html>
<html>
  <head>
    {{!-- Document Settings --}}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{!-- Page Meta --}}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    {{!-- Humans - We are human, not machines --}}
    <link href="{{@blog.url}}/humans.txt" type="text/plain" rel="author" />

    {{!-- Mobile Meta --}}
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{!-- SEO --}}
    <link href="example.com" hreflang="{{@blog.url}}" rel="alternate" />

    {{!-- Brand icon --}}
    <link rel="shortcut icon" href="{{asset "favicon.ico"}}" />

    {{!-- Stylesheets --}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/ionicons.min.css"}}" />
    {{#if post}}
        <link rel="stylesheet" type="text/css" href="{{asset "css/prism.css"}}" />
    {{/if}}
    <link rel="stylesheet" type="text/css" href="{{asset "css/main.css"}}" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Serif:400,700" />

    {{!-- Ghost outputs important style and meta data with this tag --}}
    {{ghost_head}}
  </head>
  <body class="{{body_class}}">
    {{!-- Loading --}}
    <div class="loading-bar"></div>

    {{!-- Navigation --}}
    {{#if @blog.navigation}}
      {{navigation}}
    {{/if}}

    {{!-- All the main content gets inserted here, index.hbs, post.hbs, etc --}}
    {{{body}}}

    {{!-- JavaScript --}}
    <script type="text/javascript" src="{{asset "js/jquery.js"}}"></script>
    {{#if post}}
        <script type="text/javascript" src="{{asset "js/prism.js"}}"></script>
    {{/if}}
    <script type="text/javascript" src="{{asset "js/TweenMax.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/TimelineMax.js"}}"></script>

    {{!-- Ghost outputs important scripts and data with this tag --}}
    {{ghost_foot}}

    <script type="text/javascript" src="{{asset "js/index.js"}}"></script>

    {{#if "page"}}
        <script type="text/javascript" src="{{asset "js/post.js"}}"></script>
    {{/if}}
  </body>
</html>