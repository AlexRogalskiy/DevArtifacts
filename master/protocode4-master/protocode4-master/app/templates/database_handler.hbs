<div class='col-md-12'>
    <div class='section-header'>
        <div class='section-header-title'>
            {{#if model}}
                SQLite DB enabled
            {{else}}
                Enable a SQLite DB in your app
            {{/if}}
        </div>
        <div class='switch-button'>
            {{#if model}}
                <button type="button" class="btn btn-danger" {{action 'disableDB'}}>Disable</button>
            {{else}}
                <button type="button" class="btn btn-success" {{action 'enableDB'}}>Enable</button>
            {{/if}}
        </div>
    </div>
    <hr class='section-header-hr'>
</div>
<div class='col-md-12'>
    {{#if model}}
        {{outlet}}
    {{/if}}
</div>
