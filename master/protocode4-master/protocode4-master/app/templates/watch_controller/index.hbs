<!-- Opzioni WatchController -->
<div class="col-md-3">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#home" data-toggle="tab">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home">
                    <br>
                    <label {{bind-attr class=":btn :btn-default :btn-block :btn-sm launcher:active"}}>
                        {{input type="checkbox" checked=launcher class="hidden"}}
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        Set launcher
                    </label>
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    <br>
                    <br>
                    <p align="center"><b>UiWatchControls</b></p>
                    <div class="tree col-sm-7">
                        <ul>
                            <li>
                                <span><i class="fa fa-mobile"></i> {{name}}</span>
                            </li>
                            <ul style="padding-left:16px">
                                {{partial "partials/tree_container_watch"}}
                            </ul>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "deleteWatchController"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
