{{input-checkbox label="Width Fixed" checked=isWidthConstrained disabled=controller.widthCantBeConstrained}}
{{input-checkbox label="Height Fixed" checked=isHeightConstrained disabled=controller.heightCantBeConstrained}}
{{input-number label="Width Value" disabled=controller.isntWidthConstrained min=minWidth value=widthFixed}}
{{input-number label="Height Value" disabled=controller.isntHeightConstrained min=minHeight value=heightFixed}}

{{input-checkbox label="Width Percent" checked=isWidthPercentConstrained disabled=controller.widthPercentCantBeConstrained}}
{{input-checkbox label="Height Percent" checked=isHeightPercentConstrained disabled=controller.heightPercentCantBeConstrained}}
{{input-number label="Width %" disabled=controller.isntWidthPercentConstrained min="0.1" max="1" step="0.05" value=widthPercent}}
{{input-number label="Height %" disabled=controller.isntHeightPercentConstrained min="0.1" max="1" step="0.05" value=heightPercent}}

{{input-checkbox label="Ratio Constrained" checked=isRatioConstrained disabled=controller.ratioCantBeConstrained}}
{{input-number label="Width Ratio" min="1" value=ratioWidth disabled=controller.isntRatioConstrained}}
{{input-number label="Height Ratio" min="1" value=ratioHeight disabled=controller.isntRatioConstrained}}
