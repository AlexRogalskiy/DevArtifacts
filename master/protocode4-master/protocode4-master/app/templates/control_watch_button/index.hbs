<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab"><span class="glyphicon glyphicon-pencil"
                                                                           aria-hidden="true"></span></a></li>
                <li><a href="#dimension" data-toggle="tab"><span class="glyphicon glyphicon-resize-full"
                                                                 aria-hidden="true"></span></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home">
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-text label="Title" value=title action='acceptChanges'}}
                    {{input-select
                        label="Click listener"
                        content=controllers.watchControllers.model
                        optionLabelPath="content.name"
                        optionValuePath="content"
                        selection=navigationTarget
                        prompt="Navigate to:"}}
                </div>
                <div class="tab-pane fade form-horizontal" id="dimension">
        <br>
                    <br>
                    {{input-number label="Height" min="48" value=height action='acceptChanges' }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "deleteUiWatchControl"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
