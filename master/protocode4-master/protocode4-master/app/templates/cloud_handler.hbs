<div class='col-md-12'>
    <div class='section-header'>
        <div class='section-header-title'>
            {{#if model}}
                Cloud DB enabled
            {{else}}
                Enable a Cloud DB in your app
            {{/if}}
        </div>
        <div class='switch-button'>
            {{#if model}}
                <button type="button" class="btn btn-danger" {{action 'disableCDB'}}>Disable</button>
            {{else}}
                <button type="button" class="btn btn-success" {{action 'enableCDB'}}>Enable</button>
            {{/if}}
        </div>
    </div>
    <hr class='section-header-hr'>
</div>
<div class='col-md-12'>
    {{#if model}}
        {{outlet}}
    {{/if}}
</div>
