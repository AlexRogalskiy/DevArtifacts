<!-- Preview ViewController -->
{{#if controller.currentDeviceIsSmartphone}}
    <div class="col-md-9" style="float:right;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="float:left">{{name}}</h3>
                <div class="col-xs-6 input-group pull-right">
    			    <span class="input-group-btn">
    			      	<button class="btn btn-default btn-sm" {{action 'decreaseZoom'}}>
    						<span class="glyphicon glyphicon-zoom-out" aria-hidden="true"></span>
    					</button>
    			    </span>
                    <div class="col-xs-12" style="padding: 5px 0px 0px 0px;">
                        {{input type="number" value=zoomLevel class="form-control input-sm" step="0.1" min="0.1"}}
                    </div>
                    <span class="input-group-btn">
    			      	<button class="btn btn-default btn-sm" {{action 'increaseZoom'}}>
    						<span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
    					</button>
    			    </span>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body plotted">
                {{view App.SmartphoneView}}
            </div>
        </div>
    </div>
{{else}}
    <div class="col-md-9" style="float:right;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title" style="float:left">{{name}}</h3>
                <div class="col-xs-6 input-group pull-right">
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-sm" {{action 'rotate'}}>
                            Rotate
                            <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
                        </button>
                    </span>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <span class="input-group-btn">
                            <button class="btn btn-default btn-sm" {{action 'decreaseZoom'}}>
                                <span class="glyphicon glyphicon-zoom-out" aria-hidden="true"></span>
                            </button>
                    </span>
                    <div class="col-xs-12" style="padding: 5px 0px 0px 0px;">
                        {{input type="number" value=zoomLevel class="form-control input-sm" step="0.1" min="0.1"}}
                    </div>
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-sm" {{action 'increaseZoom'}}>
                            <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                        </button>
                    </span>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body plotted">
                {{view App.TabletView}}
            </div>
        </div>
    </div>
{{/if}}
{{outlet}}
