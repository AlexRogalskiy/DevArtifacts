<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">{{name}}</h3>
        </div>
        <div class="panel-body">
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs">
                <li class="active"><a href="#home" data-toggle="tab"><span class="glyphicon glyphicon-pencil"
                                                                           aria-hidden="true"></span></a></li>
                <li><a href="#dimension" data-toggle="tab"><span class="glyphicon glyphicon-resize-full"
                                                                 aria-hidden="true"></span></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade form-horizontal in active" id="home">
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-text label="Title" value=title action='acceptChanges'}}
                    <div class="form-group">
                        <label class="col-sm-5" style="padding:8px 10px;text-align:right">Text Decoration</label>
                        <div class="col-sm-7">
                            <div class="btn-group btn-group-justified">
                                <label {{bind-attr class=":btn :btn-default :btn-sm textNormal:active"}}>
                                    {{input type="checkbox" checked=textNormal class="hidden"}} <span
                                    class="glyphicon glyphicon-font" aria-hidden="true"></span>
                                </label>
                                <label {{bind-attr class=":btn :btn-default :btn-sm textBold:active"}}>
                                    {{input type="checkbox" checked=textBold class="hidden"}} <span
                                    class="glyphicon glyphicon-bold" aria-hidden="true"></span>
                                </label>
                                <label {{bind-attr class=":btn :btn-default :btn-sm textItalic:active"}}>
                                    {{input type="checkbox" checked=textItalic class="hidden"}} <span
                                    class="glyphicon glyphicon-italic" aria-hidden="true"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-5" style="padding:8px 10px;text-align:right">Text Align</label>
                        <div class="col-sm-7">
                            <div class="btn-group btn-group-justified">
                                <label {{bind-attr class=":btn :btn-default :btn-sm textAlignLeft:active"}}>
                                    {{input type="checkbox" checked=textAlignLeft class="hidden"}} <span
                                    class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
                                </label>
                                <label {{bind-attr class=":btn :btn-default :btn-sm textAlignCenter:active"}}>
                                    {{input type="checkbox" checked=textAlignCenter class="hidden"}} <span
                                    class="glyphicon glyphicon-align-center" aria-hidden="true"></span>
                                </label>
                                <label {{bind-attr class=":btn :btn-default :btn-sm textAlignRight:active"}}>
                                    {{input type="checkbox" checked=textAlignRight class="hidden"}} <span
                                    class="glyphicon glyphicon-align-right" aria-hidden="true"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade form-horizontal" id="dimension">
                    <br>
                    {{input-number label="Height" min="36" value=height action='acceptChanges' }}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "deleteUiWatchControl"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
