<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{#link-to 'appMenu' parentMenu class="btn btn-default btn-sm"}}
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                {{/link-to}}
                {{name}}
            </h3>
        </div>
        <div class="panel-body">
            <button type="button" {{bind-attr class=":btn :btn-block :btn-sm controller.isDirtyOverride:btn-warning:btn-default"}} {{action
                "acceptChanges"}}>
                <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
            </button>
            <br>
            <ul class="nav nav-tabs spacer">
                <li class="active">
                    <a href="#home" data-toggle="tab">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home">
                    <br>
                    {{input-text label="Name" value=name action='acceptChanges'}}
                    {{input-text label="Title" value=title action='acceptChanges'}}
                    {{input-select
                        label="Target"
                        content=controller.navigationArray
                        optionLabelPath="content.name"
                        optionValuePath="content"
                        prompt="Select target"
                        selection=navigation.destinationScene}}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "delete"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
