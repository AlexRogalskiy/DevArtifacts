<div class="form-group">
    <label {{bind-attr for="colorPicker.elementId"}} class="col-sm-5"
                                                     style="padding:8px 10px;text-align:right">{{label}}</label>
    <div class="col-sm-7">
        {{input
            value=value
            class="form-control input-sm colorpicker"
            viewName="colorPicker"
            focus-out="acceptChanges"
            insert-newline="acceptChanges"
        }}
    </div>
</div>
