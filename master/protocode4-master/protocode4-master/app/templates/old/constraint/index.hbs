<div class="col-md-3">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                {{#link-to 'dispatchUiPhoneControl' uiPhoneControl class="btn btn-default btn-sm"}}
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
                {{/link-to}}
                {{name}}
            </h3>
        </div>
        <div class="panel-body">
            {{partial "partials/invalid_report"}}
            <br>
            {{partial "partials/first_commands"}}
            <ul class="nav nav-tabs spacer">
                <li class="active">
                    <a href="#home" data-toggle="tab">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade in active form-horizontal" id="home">
                    <br>
                    {{input-select label="Layout Edge:" content=filteredLayoutEdges optionLabelPath="content"
                        optionValuePath="content" selection=layoutEdge prompt="Select edge"}}
                    {{input-checkbox label="With Parent" checked=withParent}}
                    {{input-select label="Reference Element:" content=uiPhoneControl.siblings  optionLabelPath="content.name"
                        optionValuePath="content" selection=referenceElement prompt="Select element" disabled=withParent}}
                    {{input-select label="Reference Layout Edge:" content=filteredReferenceLayoutEdges optionLabelPath="content"
                        optionValuePath="content" selection=referenceLayoutEdge prompt="Select edge"}}
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm" {{action "delete"}}>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </div>
        </div>
    </div>
</div>
