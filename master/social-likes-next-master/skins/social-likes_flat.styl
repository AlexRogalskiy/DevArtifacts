// Social Likes by Artem Sapegin. http://sapegin.github.io/social-likes/
// Flat skin
// Design: Genn Osipenko, http://genn.org/

@import './include/base'
@import './include/colors'

.social-likes {
	min-height:36px;
	margin:-.45em;
	line-height:1.45;

	&__widget {
		tweak-inverted-text();
		margin:.45em;
		line-height:inherit;
		border:0;
		text-align:left;
		color:#fff;
	}
	&__widget:hover,
	&__widget:active,
	&__widget:focus {
		opacity: 0.9;
		filter: saturate(0.80) brightness(1.15);
	}

	&__button {
		padding:.18em .7em .15em 1.75em;
		vertical-align:middle;
		font-size:.95em;
	}

	&__icon {
		top:.3em;
		left:.4em;
	}

	// Vertical mode
	&_vertical &__widget {
		width:11em;
	}

	// Facebook
	&__widget_facebook {
		background:facebook-color;
	}

	// Twitter
	&__widget_twitter {
		background:twitter-color;
	}

	// Google+
	&__widget_plusone {
		background:plusone-color;
	}

	// Vkontakte
	&__widget_vkontakte {
		background:vkontakte-color;
	}

	// Odnoklassniki
	&__widget_odnoklassniki {
		background:odnoklassniki-color;
	}

	// Pinterest
	&__widget_pinterest {
		background:pintereset-color;
	}

	// telegram
	&__widget_telegram {
		background:telegram-color;
	}

	// LinkedIn
	&__widget_linkedin {
		background:linkedin-color;
	}
}
