{
    "name": "react-router-xs",
    "version": "0.1.7",
    "description": "Minimal set of React components for browser routing",
    "license": "MIT",
    "author": "Damiano Barbati <damiano.barbati@gmail.com> (http://github.com/damianobarbati)",
    "repository": "damianobarbati/react-router-xs",
    "main": "dist/index.min.js",
    "scripts": {
        "codebase:size": "find -E . -regex '.*\\.(js|html|css|yml|sh)$' -not -path './node_modules/**' -not -path './dist/**' -not -path './ssl/**' | xargs wc -l",
        "jslint": "eslint **/*.js --ignore-path .gitignore",
        "build:dev": "NODE_ENV=development webpack --config ./webpack.config.js --mode development --progress --watch",
        "build:prod": "NODE_ENV=production webpack --config ./webpack.config.js --mode production --progress",
        "release:patch": "yarn build:prod && git commit -am 'relasing patch' && npm version patch && npm publish",
        "release:minor": "yarn build:prod && git commit -am 'relasing minor' && npm version minor && npm publish",
        "release:major": "yarn build:prod && git commit -am 'relasing major' && npm version major && npm publish",
        "test": "jest --no-cache --coverage",
        "test:watch": "jest --no-cache --coverage --watchAll"
    },
    "sideEffects": false,
    "browserslist": [
        "chrome 64",
        "safari 11.1",
        "ios_saf 11.3"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 2017,
            "sourceType": "module",
            "impliedStrict": true,
            "ecmaFeatures": {
                "jsx": true,
                "impliedStrict": true,
                "globalReturn": false,
                "experimentalObjectRestSpread": true
            }
        },
        "env": {
            "browser": true,
            "serviceworker": true,
            "node": true,
            "jest": true,
            "es6": true
        },
        "plugins": [
            "react",
            "jest"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:jest/recommended"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": "commonjs",
                    "useBuiltIns": "usage",
                    "debug": true
                }
            ],
            "@babel/preset-react"
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "legacy": true
                }
            ],
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": false
                }
            ],
            "@babel/plugin-proposal-export-default-from",
            "@babel/plugin-proposal-export-namespace-from",
            "@babel/plugin-proposal-json-strings",
            "@babel/plugin-syntax-dynamic-import",
            "lodash"
        ]
    },
    "jest": {
        "bail": true,
        "verbose": true,
        "testURL": "http://localhost",
        "transformIgnorePatterns": [
            "!node_modules/react-runtime"
        ],
        "setupFiles": [
            "raf/polyfill"
        ],
        "setupTestFrameworkScriptFile": "jest-extended"
    },
    "peerDependencies": {
        "prop-types": "^15.6.1",
        "react": "^16.4.0",
        "react-dom": "^16.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.54",
        "@babel/plugin-proposal-class-properties": "^7.0.0-beta.54",
        "@babel/plugin-proposal-decorators": "^7.0.0-beta.54",
        "@babel/plugin-proposal-export-default-from": "^7.0.0-beta.54",
        "@babel/plugin-proposal-export-namespace-from": "^7.0.0-beta.54",
        "@babel/plugin-proposal-json-strings": "^7.0.0-beta.54",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.54",
        "@babel/preset-env": "^7.0.0-beta.54",
        "@babel/preset-react": "^7.0.0-beta.54",
        "babel-core": "^7.0.0-0",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^23.0.1",
        "babel-loader": "^8.0.0-beta.1",
        "babel-plugin-lodash": "^3.3.2",
        "case-sensitive-paths-webpack-plugin": "^2.1.2",
        "clean-webpack-plugin": "^0.1.19",
        "compression-webpack-plugin": "^1.1.11",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "npm:enzyme-react-adapter-future",
        "eslint": "^4.19.1",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-jest": "^21.15.0",
        "eslint-plugin-react": "^7.7.0",
        "jest": "^23.1.0",
        "jest-extended": "^0.7.2",
        "path-to-regexp": "^2.2.1",
        "prop-types": "^15.6.1",
        "raf": "^3.4.0",
        "react": "^16.4.0",
        "react-dom": "^16.3.0",
        "regenerator-runtime": "^0.11.1",
        "webpack": "^4.12.0",
        "webpack-bundle-analyzer": "^2.13.1",
        "webpack-command": "^0.2.1",
        "webpack-notifier": "^1.6.0"
    }
}
