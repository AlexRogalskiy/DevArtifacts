extends ../layouts/example.jade
block view
  a.btn.js-fullscreen(href='#') Fullscreen
  .spritespin
block source
  a(name="Html" index=3)
  viewcode
  a(name="Javascript")
  script(type='text/javascript').
    $(function(){
      $('a.js-fullscreen').click(function(e){
        e.preventDefault();
        $('.spritespin').spritespin('api').requestFullscreen();
      });
      $('.spritespin').spritespin({
        source: '/images/bike6x6_big.jpg',
        // source: SpriteSpin.sourceArray('/images/rad_zoom_{frame}.jpg', { frame: [1,34], digits: 3 }),
        width: 480,
        height: 327,
        frames: 34,
        framesX: 6,
        sizeMode: "fit",
        sense: -1
      });
    });
