extends ../layouts/example.jade
block view
  ul.spin-list
    li: .spritespin1
    li: .spritespin2
    li: .spritespin3
    li: .spritespin4
block source
  a(name="Html" index=3)
  viewcode
  a(name="Css")
  style().
    .spritespin1, .spritespin2, .spritespin3, .spritespin4 {
      border: 1px solid black;
      background: black;
    }
    ul.spin-list {
      margin: 0;
    }
    ul.spin-list li {
      display: inline-block;
    }
  a(name="Javascript")
  script(type='text/javascript').
    $(function(){
      var frames = SpriteSpin.sourceArray('/images/rad_zoom_{frame}.jpg', { frame: [1,34], digits: 3 }); 
      $('.spritespin1').spritespin({
        width: 200,
        height: 200,
        source: frames,
        sizeMode: 'fill',
        sense: -1
      });

      $('.spritespin2').spritespin({
        width: 200,
        height: 200,
        source: frames,
        sizeMode: 'fit',
        sense: -1
      });

      $('.spritespin3').spritespin({
        width: 200,
        height: 200,
        source: frames,
        sizeMode: 'original',
        sense: -1,
        renderer: 'canvas'
      });

      $('.spritespin4').spritespin({
        width: 200,
        height: 200,
        source: frames,
        sizeMode: 'stretch',
        sense: -1
      });
    });
