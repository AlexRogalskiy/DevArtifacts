doctype html
html(lang="en")
  head
    block title
      title SpriteSpin Example
    block resources
      link(type="text/css" rel="stylesheet" media="all" href="/style.css")
      script(src='/page.js' type='text/javascript')
      script(src='/spritespin.js' type='text/javascript')
    block meta
      meta(property="og:type" content="website")
      meta(property="og:title" content="SpriteSpin example")
      meta(property="og:site_name" content="SpriteSpin")
      meta(property="og:description" content="A SpriteSpin example.")
  body
    #example-frame
      .sample-view
        block view
          div(class="spritespin")
      .sample-code
      .sample-source
        block source
  script(type='text/javascript').
    SpriteSpinPage.bootSample({
      view: '.sample-view',
      code: '.sample-code',
      source: '.sample-source'
    });

